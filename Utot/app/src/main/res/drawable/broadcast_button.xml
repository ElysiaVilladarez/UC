<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="2dp"
        android:top="2dp">
        <shape>
            <corners android:radius="@dimen/rounded_corners_radius" />
            <solid android:color="@color/button_shadow" />
        </shape>
    </item>
    <item>
        <inset>
            <selector>
                <item
                    android:bottom="2dp"
                    android:right="2dp"
                    android:state_pressed="false">
                    <shape
                        android:padding="10dp"
                        android:shape="rectangle">
                        <solid android:color="@color/broadcast_button_color" />
                        <corners
                            android:bottomLeftRadius="@dimen/rounded_corners_radius"
                            android:bottomRightRadius="@dimen/rounded_corners_radius"
                            android:topLeftRadius="@dimen/rounded_corners_radius"
                            android:topRightRadius="@dimen/rounded_corners_radius" />

                        <padding
                            android:bottom="5dp"
                            android:left="5dp"
                            android:right="5dp"
                            android:top="5dp" />
                    </shape>

                </item>
                <item
                    android:bottom="2dp"
                    android:right="2dp"
                    android:state_pressed="true">
                    <shape xmlns:android="http://schemas.android.com/apk/res/android"
                        android:padding="10dp"
                        android:shape="rectangle">
                        <solid android:color="@color/broadcast_button_color_pressed" />
                        <corners
                            android:bottomLeftRadius="@dimen/rounded_corners_radius"
                            android:bottomRightRadius="@dimen/rounded_corners_radius"
                            android:topLeftRadius="@dimen/rounded_corners_radius"
                            android:topRightRadius="@dimen/rounded_corners_radius" />

                        <padding
                            android:bottom="5dp"
                            android:left="5dp"
                            android:right="5dp"
                            android:top="5dp" />
                    </shape>

                </item>
            </selector>
        </inset>
    </item>
</layer-list>
