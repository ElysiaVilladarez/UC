<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_initial_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="utot.utot.login.InitialScreen">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_initial_screen"/>

    <ImageView
        android:id="@+id/utotLogo"
        android:layout_width="@dimen/logo_1_width"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        app:layout_aspectRatio="30%"
        android:layout_marginBottom="10dp"
        app:layout_marginBottomPercent="4%"/>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <utot.utot.customviews.ClearTextView
            android:id="@+id/registerButton"
            style="@style/pangram_medium"
            android:layout_height="@dimen/edittext_height"
            android:background="@drawable/initial_screen_buttons"
            android:text="REGISTER"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/transparent"
            app:layout_widthPercent="70%" />
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/trans"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerButton"
        android:layout_centerHorizontal="true">

        <utot.utot.customviews.TextViewPlus
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="OR"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <android.support.percent.PercentFrameLayout
            android:layout_width="@dimen/line_width"
            android:layout_height="@dimen/line_height"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/or"
            android:background="@color/whiteLogIn" />

        <android.support.percent.PercentFrameLayout
            android:layout_width="@dimen/line_width"
            android:layout_height="@dimen/line_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/or"
            android:background="@color/whiteLogIn" />

    </android.support.percent.PercentRelativeLayout>
        <utot.utot.customviews.ClearTextView
            android:layout_below="@id/trans"
            android:id="@+id/loginButton"
            style="@style/pangram_medium"
            android:layout_height="@dimen/edittext_height"
            android:background="@drawable/initial_screen_buttons"
            android:text="LOGIN"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/transparent"
            app:layout_widthPercent="70%" />

    </android.support.percent.PercentRelativeLayout>


</android.support.percent.PercentRelativeLayout>
