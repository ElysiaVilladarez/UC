<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="vertical"
    android:scrollbarStyle="insideOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="utot.utot.login.LoginSplashScreen">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:src="@drawable/aa_5"
        android:id="@+id/mainwindow"/>
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:animateLayoutChanges="true"
        android:id="@+id/quoteLay"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

    <android.support.percent.PercentFrameLayout
        android:id="@+id/lineAbove"
        app:layout_widthPercent="80%"
        android:layout_height="@dimen/line_height"
        android:layout_centerHorizontal="true"
        android:background="@color/whiteLogIn" />

    <utot.utot.customviews.TextViewPlus
        android:layout_below="@id/lineAbove"
        style="@style/avenir_roman"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:textColor="@color/whiteLogIn"
        android:text="Puro ka hugot, \nibaon mo naman"
        android:id="@+id/quote"
        android:textSize="35sp"/>

    <android.support.percent.PercentFrameLayout

        android:id="@+id/lineBelow"
        app:layout_widthPercent="80%"
        android:layout_below="@id/quote"
        android:layout_width="@dimen/line_width"
        android:layout_height="@dimen/line_height"
        android:layout_centerHorizontal="true"
        android:background="@color/whiteLogIn" />

    </android.support.percent.PercentRelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:animateLayoutChanges="true"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/utotLogo"
        android:src="@drawable/utotlogo1"
        android:visibility="gone"/>




</android.support.percent.PercentRelativeLayout>
